#!/usr/bin/make -f

DH_VERBOSE =1

override_dh_auto_configure:
	dh_auto_configure -- -DLIBDRM=1
override_dh_auto_build:
	PROJECT_DIR=$(shell pwd) dh_auto_build
override_dh_auto_install:
	PROJECT_DIR=$(shell pwd) dh_auto_install
override_dh_auto_clean:
	PROJECT_DIR=$(shell pwd) make clean

%:
	dh $@
